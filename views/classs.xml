<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_classs_tree" model="ir.ui.view">
        <field name="name">classs.tree</field>
        <field name="model">classs</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="student_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_classs_form" model="ir.ui.view">
        <field name="name">classs.form</field>
        <field name="model">classs</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="student_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_classs_search" model="ir.ui.view">
        <field name="name">classs.search</field>
        <field name="model">classs</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="student_ids" widget="many2many_tags"/>
            </search>
        </field>
    </record>
    <record id="view_classs_kanban" model="ir.ui.view">
        <field name="name">classs.kanban</field>
        <field name="model">classs</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div t-attf-class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="student_ids" widget="many2many_tags"/>
                                </div>
                                <div>
                                    <field name="teacher_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="classs_action" model="ir.actions.act_window">
        <field name="name">Classs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">classs</field>
        <field name="view_mode">tree,kanban,form,search</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new classs!
            </p>
        </field>
    </record>

    <menuitem id="menu_Classs"
              name="Classs"
              parent="menu_School"
              action="classs_action"
              sequence="4"/>
</odoo>
