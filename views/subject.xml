<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_subject_tree" model="ir.ui.view">
        <field name="name">subject.tree</field>
        <field name="model">subject</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_subject_form" model="ir.ui.view">
        <field name="name">subject.form</field>
        <field name="model">subject</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_subject_search" model="ir.ui.view">
        <field name="name">subject.search</field>
        <field name="model">subject</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="name"/>
            </search>
        </field>
    </record>
    <record id="view_subject_kanban" model="ir.ui.view">
        <field name="name">subject.kanban</field>
        <field name="model">subject</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div t-attf-class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="subject_action" model="ir.actions.act_window">
        <field name="name">Subject</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">subject</field>
        <field name="view_mode">tree,kanban,form,search</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new subject!
            </p>
        </field>
    </record>
</odoo>
