<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_teacher_tree" model="ir.ui.view">
        <field name="name">view.teacher.tree</field>
        <field name="model">teacher</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="gender"/>
                <field name="student_ids" widget="many2many_tags"/>
                <field name="subject_id"/>
            </tree>
        </field>
    </record>

    <record id="view_teacher_form" model="ir.ui.view">
        <field name="name">view.teacher.form</field>
        <field name="model">teacher</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="gender"/>
                            <field name="student_ids" widget="many2many_tags"/>
                            <field name="subject_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_teacher_search" model="ir.ui.view">
        <field name="name">teacher.search</field>
        <field name="model">teacher</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="gender"/>
                <field name="student_ids" widget="many2many_tags"/>
                <field name="subject_id"/>
                <separator/>
                <filter name="filter_male" string="male" domain="[('gender','=','male')]"/>
                <filter name="filter_female" string="female" domain="[('gender','=','female')]"/>
                <separator/>
                <group expand="1" string="Group By">
                    <filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_teacher_kanban" model="ir.ui.view">
        <field name="name">teacher.kanban</field>
        <field name="model">teacher</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="gender"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div t-attf-class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="phone"/>
                                </div>
                                <div>
                                    <field name="email"/>
                                </div>
                                <div>
                                    <field name="gender"/>
                                </div>
                                <div>
                                    <field name="student_ids" widget="many2many_tags"/>
                                    <field name="subject_id"/>
                                </div>
                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="teacher_action" model="ir.actions.act_window">
        <field name="name">Teacher</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">teacher</field>
        <field name="view_mode">tree,kanban,form,search</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Teacher!
            </p>
        </field>
    </record>

</odoo>
